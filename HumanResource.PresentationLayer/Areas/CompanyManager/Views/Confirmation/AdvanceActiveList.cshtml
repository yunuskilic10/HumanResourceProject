
@{
    ViewData["Title"] = "AdvanceActiveList";
    Layout = "~/Views/Shared/_HumanLayout.cshtml";
	int count = 1;
}

@model ICollection<ListAdvanceDTO>


<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div class="card" id="invoiceList">
					<div class="card-header border-0">
						<div class="d-flex align-items-center">
							<b class="card-title mb-0 flex-grow-1 badge bg-primary">Accepted Advances</b>
						</div>
						@*<div class="d-flex align-items-center">
							<h5 class="card-title mb-0 flex-grow-1">Accepted Advances</h5>
						</div>*@
					</div>
					<div class="card-body">
						<div>
							<div class="table-responsive table-card">
								<table class="table align-middle table-nowrap" id="invoiceTable">
									<thead class="text-muted">
										<tr>
											<th data-sort="invoice_id">No</th>
											<th data-sort="invoice_id">Personnel Id</th>
											<th data-sort="invoice_id">Personnel</th>
											<th data-sort="customer_name">Description</th>
											<th data-sort="email">Advance Type</th>
											<th data-sort="email">Price</th>
											<th data-sort="email">Currency</th>
											<th data-sort="action">Response Date</th>
										</tr>
										@foreach (var item in Model)
										{
											<tr>
												<th data-sort="invoice_id">@count</th>
												<th data-sort="invoice_id">@item.AppUser.IdentityNumber</th>
												<th data-sort="invoice_id">@item.AppUser.FirstName @item.AppUser.LastName</th>
												<th data-sort="customer_name">@item.Name</th>
												<th data-sort="date">@item.AdvanceType</th>
												<th data-sort="email">@item.Price</th>
												<th data-sort="email">@item.Currency</th>
												<th data-sort="email">@item.ResponseDate</th>
										
											</tr>
											count++;
										}
									</thead>
									<tbody class="list form-check-all" id="invoice-list-data">
									</tbody>
								</table>								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
