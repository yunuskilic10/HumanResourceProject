@using HumanResource.Applications.Models.DTOs.JobDTO;

@{
    ViewData["Title"] = "Joblist";
    Layout = "~/Views/Shared/_HumanLayout.cshtml";
    int count = 1;
}

@model ICollection<JobListDTO>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card" id="invoiceList">
                    <div class="card-header border-0">
                        <div class="d-flex align-items-center">
                            <b class="card-title mb-0 flex-grow-1 badge bg-primary">JOB LIST</b>
                        </div>
                    </div>
                    <br />
                    <div class="card-body">
                        <div>
                            <div class="table-responsive table-card">
                                <table class="table table-hover align-middle table-nowrap" id="invoiceTable">

                                    <thead class="text-muted">
                                        <tr>
                                            <th data-sort="invoice_id">No</th>
                                            <th data-sort="email">Name</th>
                                            <th>Add Personnel</th>
                                        </tr>

                                    </thead>
                                    <tbody class="list form-check-all" id="invoice-list-data">
                                        @foreach (var item in Model)
                                        {
                                            <tr class="align-middle" onclick="location.href='@Url.Action("PersonnelJobList", "ManagerTransection", new { area = "companymanager", id = item.Id })';" style="cursor:pointer;">
                                                <th data-sort="invoice_id">@count</th>
                                                <th data-sort="customer_name">@item.Name</th>
                                                <th data-sort="customer_name">
                                                    <a class="btn btn-success" asp-action="CreatePersonnel" asp-controller="ManagerTransection" asp-area="CompanyManager" asp-route-id="@item.Id" asp-route-depid="@item.DepartmentId">Add Personnel</a>
                                                </th>
                                            </tr>
                                            count++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


