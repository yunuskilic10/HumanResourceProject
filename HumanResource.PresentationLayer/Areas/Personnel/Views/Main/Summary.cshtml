@model SummaryDTO
@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_HumanLayout.cshtml";
}

@* *********JS ye bu kod eklenecek****** *@
<script>
    @functions {
        string FormatPhoneNumber(string phoneNumber)
        {
            if (!string.IsNullOrEmpty(phoneNumber) && phoneNumber.Length == 10)
            {
                return $"{phoneNumber.Substring(0, 3)} {phoneNumber.Substring(3, 3)} {phoneNumber.Substring(6, 2)} {phoneNumber.Substring(8, 2)}";
            }
            return phoneNumber;
        }
    }
</script>

<div class="container-fluid">
    <div class="profile-foreground position-relative mx-n4 mt-n4">
        <div class="profile-wid-bg">
            <img src="~/velzon_html/default/assets/images/auth-one-bg.jpg" alt="" class="profile-wid-img" />
        </div>
    </div>
    <div class="pt-4 mb-4 mb-lg-3 pb-lg-4 profile-wrapper">
        <div class="row g-4">
            <div class="col-auto">
                <div class="avatar-lg">
                    <img src="~/Pictures/@Model.PhotoFile" alt="user-img" class="img-thumbnail rounded-circle" />
                </div>
            </div>
            <div class="col">
                <div class="p-2">
                    <h3 class="text-white mb-1">@Model.FirstName @Model.SecondName @Model.LastName @Model.SecondLastName </h3>
                    <p class="text-white text-opacity-75">@Model.JobName</p>
                    <div class="hstack text-white-50 gap-1">
                        <div>
                            <i class="ri-building-line me-1 text-white text-opacity-75 fs-16 align-middle"></i>@Model.CompanyName
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-auto order-last order-lg-0">
                <div class="row text text-white-50 text-center">
                    @*                    <div class="col-lg-6 col-4">
                    <div class="p-2">
                    <h4 class="text-white mb-1">24.3K</h4>
                    <p class="fs-14 mb-0">Followers</p>
                    </div>
                    </div>
                    <div class="col-lg-6 col-4">
                    <div class="p-2">
                    <h4 class="text-white mb-1">1.3K</h4>
                    <p class="fs-14 mb-0">Following</p>
                    </div>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div>
                <div class="d-flex profile-wrapper">
                    <ul class="nav nav-pills animation-nav profile-nav gap-2 gap-lg-3 flex-grow-1" role="tablist">
                    </ul>
                    <div class="flex-shrink-0">
                        <a asp-area="Personnel" asp-controller="Main" asp-action="Detail" asp-route-id="@Model.Id" method="get" class="btn btn-warning"><i class="ri-edit-box-line align-bottom"></i> Profile Details</a>
                    </div>
                    <div class="flex-shrink-0">
                        <a asp-area="Personnel" asp-controller="Main" asp-action="Update" asp-route-id="@Model.Id" method="get" class="btn btn-success"><i class="ri-edit-box-line align-bottom"></i> Edit Profile</a>
                    </div>
                </div>
                <div class="tab-content pt-4 text-muted">
                    <div class="tab-pane active" id="overview-tab" role="tabpanel">
                        <div class="row">
                            <div class="col-xxl-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-borderless mb-12">
                                                <tbody>
                                                    <tr>
                                                        <th class="ps-0" scope="row">E-mail :</th>
                                                        <td class="text-muted">@Model.Email</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="ps-0" scope="row">Mobile :</th>
                                                        <td class="text-muted">+(90) @FormatPhoneNumber(Model.PhoneNumber)</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="ps-0" scope="row">Address :</th>
                                                        <td class="text-muted">@Model.Address</td>
                                                    </tr>
                                                    <tr>
                                                        <th class="ps-0" scope="row">Department :</th>
                                                        <td class="text-muted">@Model.DepartmentName</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
