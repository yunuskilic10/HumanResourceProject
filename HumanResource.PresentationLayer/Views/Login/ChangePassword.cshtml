
@{
    ViewData["Title"] = "ChangePassword";
    Layout = null;
}

@model ChangePasswordDTO

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">
<head>

    <meta charset="utf-8" />
    <title>Two Step Verification | Begny </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/velzon_html/default/assets/images/favicon.ico">

    <!-- Layout config Js -->
    <script src="~/velzon_html/default/assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="~/velzon_html/default/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/velzon_html/default/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/velzon_html/default/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="~/velzon_html/default/assets/css/custom.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <div class="auth-page-wrapper pt-5">
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <div>
                                <a href="index.html" class="d-inline-block auth-logo">
                                    <img src="~/velzon_html/default/assets/images/logo-light.png" alt="" height="20">
                                </a>
                            </div>
                            <p class="mt-3 fs-15 fw-medium"></p>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">
                            <div class="card-body p-4">
                                <div class="mb-4">
                                    <div class="avatar-lg mx-auto">
                                        <div class="avatar-title bg-light text-primary display-5 rounded-circle">
                                            <i class="ri-mail-line"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="p-2 mt-4">
                                    <div class="text-muted text-center mb-4 mx-lg-3">
                                        <h4>Verify Your Email</h4>
                                        <p>Please enter the code sent to <span class="fw-semibold">example@abc.com</span></p>
                                    </div>
                                    <form autocomplete="off" asp-action="ChangePassword" asp-controller="Login" asp-area=" "  method="post">
                                        <input type="hidden" asp-for="@Model.Email" />
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-3">
                                                    <label for="digit1-input" class="visually-hidden">Digit 1</label>
                                                    <input asp-for="ConfirmCode" type="text" class="form-control form-control-lg bg-light border-light text-center" onkeyup="moveToNext(1, event)" maxLength="6" id="digit1-input">
                                                </div>
                                            </div>
                                        </div>
                                    <div class="mt-3">
                                        <button type="submit"  class="btn btn-success w-100">Confirm</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> Begny. Crafted with <i class="mdi mdi-heart text-danger"></i> by BEGNY Developers
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- end auth-page-wrapper -->
    <!-- JAVASCRIPT -->
    <script src="~/velzon_html/default/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/velzon_html/default/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/velzon_html/default/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/velzon_html/default/assets/libs/feather-icons/feather.min.js"></script>
    <script src="~/velzon_html/default/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>
    <script src="~/velzon_html/default/assets/js/plugins.js"></script>

    <!-- particles js -->
    <script src="~/velzon_html/default/assets/libs/particles.js/particles.js"></script>
    <!-- particles app js -->
    <script src="~/velzon_html/default/assets/js/pages/particles.app.js"></script>
    <!-- two-step-verification js -->
    <script src="~/velzon_html/default/assets/js/pages/two-step-verification.init.js"></script>
</body>
</html>